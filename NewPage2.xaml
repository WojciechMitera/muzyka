<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="odtwarzacz_muzyki.NewPage2"
             Title="" BackgroundColor="#2F2D2D">
    <VerticalStackLayout>
        <Label x:Name="tytul" FontSize="50" TextColor="#D9D9D9" FontAttributes="Bold" Margin="20,20,0,0"></Label>
        <Label x:Name="ilosc" Text="0 songs" FontSize="20" TextColor="#D9D9D9" FontAttributes="Bold" Margin="20,20,0,0"/>

        <VerticalStackLayout HorizontalOptions="End" Margin="0,0,20,20">
            <Button Text="+" BackgroundColor="#D9D9D9" WidthRequest="50" HeightRequest="50" CornerRadius="100" TextColor="#2F2D2D" FontSize="20" FontAttributes="Bold" Clicked="Add_Button_Clicked">


            </Button>
        </VerticalStackLayout>


        <CollectionView BackgroundColor="#2F2D2D" x:Name="list" HeightRequest="650" WidthRequest="370" SelectionMode="Single"  Margin="20,0,20,0" SelectionChanged="list_SelectionChanged">

            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <HorizontalStackLayout Style="{StaticResource horizontal}" Margin="0,30,0,0" Padding="0,10,0,0" Spacing="50" WidthRequest="350" VerticalOptions="Center" HorizontalOptions="Center">
                        <Image WidthRequest="50" HeightRequest="50" BackgroundColor="#D9D9D9"></Image>
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" TextColor="#D9D9D9" FontSize="25" Padding="0,0,10,0" WidthRequest="150" VerticalTextAlignment="Center" HorizontalTextAlignment="Start"></Label>

                        </VerticalStackLayout>

                        <Button x:Name="delete" Text="-" BackgroundColor="#D9D9D9" WidthRequest="30" HeightRequest="30" CornerRadius="100" TextColor="#2F2D2D" FontSize="20" FontAttributes="Bold" Clicked="delete_Clicked"></Button>

                        <!--<Label Text="{Binding Path}"></Label>-->
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>